{% extends "../base.html.twig" %}

{% block sections %}

<form class="form-horizontal">
	
	<div class="form-group">
		<label for="account_name" class="col-sm-2 control-label">Account</label>
		<div class="col-sm-10">
			<select class="form-control select2" id="account_name">
				<option>Bart Wttewaall</option>
				<option>Peter Kwarts</option>
				<option>Tom Knol</option>
				<option>Coen Wessels</option>
				<option>Sander Groen</option>
			</select>
		</div>
	</div>
	
	<div class="form-group">
		<label for="counterparty_account_name" class="col-sm-2 control-label">Tegenrekening</label>
		<div class="col-sm-10">
			<select class="form-control select2" id="counterparty_account_name">
				<option>Bart Wttewaall</option>
				<option>Peter Kwarts</option>
				<option>Tom Knol</option>
				<option>Coen Wessels</option>
				<option>Sander Groen</option>
			</select>
		</div>
	</div>
	
	<div class="form-group">
		<label for="transaction_amount_name" class="col-sm-2 control-label">Bedrag</label>
		<div class="col-sm-10">
			<div class="input-group">
				<div class="input-group-addon">&euro;</div>
				<input type="text" class="form-control" id="transaction_amount_name" placeholder="Bedrag">
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<label for="transaction_type_code" class="col-sm-2 control-label">Betaalwijze</label>
		<div class="col-sm-10">
			<div class="input-group btn-group" role="group" aria-label="..." id="transaction_type_code">
				<button type="button" class="btn btn-default">Bank</button>
				<button type="button" class="btn btn-default">Cash</button>
				<button type="button" class="btn btn-default">Natura</button>
			</div>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<button type="button" class="btn btn-default btn-cancel">Annuleren</button>
			<button type="submit" class="btn btn-primary btn-submit">Verzenden</button>
		</div>
	</div>
	
</form>

{% endblock %}